{
  "name": "@nesjett/agent-setup-copier",
  "version": "0.1.0",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-env src/main.ts",
    "build": "deno compile --allow-read --allow-write --allow-env --output dist/asc src/main.ts",
    "build:all": "deno task build:linux && deno task build:macos && deno task build:macos-arm && deno task build:windows",
    "build:linux": "deno compile --allow-read --allow-write --allow-env --target x86_64-unknown-linux-gnu --output dist/asc-linux src/main.ts",
    "build:macos": "deno compile --allow-read --allow-write --allow-env --target x86_64-apple-darwin --output dist/asc-macos src/main.ts",
    "build:macos-arm": "deno compile --allow-read --allow-write --allow-env --target aarch64-apple-darwin --output dist/asc-macos-arm src/main.ts",
    "build:windows": "deno compile --allow-read --allow-write --allow-env --target x86_64-pc-windows-msvc --output dist/asc-windows.exe src/main.ts",
    "test": "deno test --allow-read --allow-write",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/main.ts"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/fmt": "jsr:@std/fmt@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.0",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
