{
  "name": "@nesjett/agent-setup-copier",
  "version": "0.2.0",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-env src/main.ts",
    "build": "deno compile --allow-read --allow-write --allow-env --output dist/acm src/main.ts",
    "build:all": "deno task build:linux && deno task build:macos && deno task build:macos-arm && deno task build:windows",
    "build:linux": "deno compile --allow-read --allow-write --allow-env --target x86_64-unknown-linux-gnu --output dist/acm-linux src/main.ts",
    "build:macos": "deno compile --allow-read --allow-write --allow-env --target x86_64-apple-darwin --output dist/acm-macos src/main.ts",
    "build:macos-arm": "deno compile --allow-read --allow-write --allow-env --target aarch64-apple-darwin --output dist/acm-macos-arm src/main.ts",
    "build:windows": "deno compile --allow-read --allow-write --allow-env --target x86_64-pc-windows-msvc --output dist/acm-windows.exe src/main.ts",
    "test": "deno test --allow-read --allow-write --allow-run --allow-env",
    "test:coverage": "deno test --allow-read --allow-write --allow-run --allow-env --coverage=coverage/",
    "test:coverage-report": "deno coverage coverage/ --lcov > coverage/lcov.info",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/main.ts"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/fmt": "jsr:@std/fmt@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.0",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
}
